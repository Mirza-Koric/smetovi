---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      body {
        margin: 0;
        font-family: sans-serif;
        background: #f3f3f3;
      }

      .imagesMain {
        column-count: 3;
        column-gap: 1rem;
        padding: 6rem 2rem 2rem; /* Top padding gives space from header */
        max-width: 1200px;
        margin: auto;
      }

      .comicPanel {
        display: inline-block;
        width: 100%;
        margin: 0 0 1rem;
        break-inside: avoid;
        border: 3px solid black;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        background: white;
        overflow: hidden;
        transition: transform 0.3s ease;
      }

      .comicPanel:hover {
        transform: scale(1.03);
        z-index: 1;
      }

      .comicPanel img {
        display: block;
        width: 100%;
        height: auto;
        object-fit: cover;
      }

      @media (max-width: 1000px) {
        .imagesMain {
          column-count: 2;
        }
      }

      @media (max-width: 600px) {
        .imagesMain {
          column-count: 1;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main class="imagesMain">
      <a class="comicPanel" href="/images/slike/_smetoviImage1.png" target="_blank">
        <img src="/images/slike/_smetoviImage1.png" alt="img1" />
      </a>
      <a class="comicPanel" href="/images/slike/_smetoviImage2.png" target="_blank">
        <img src="/images/slike/_smetoviImage2.png" alt="img2" />
      </a>
      <a class="comicPanel" href="/images/slike/_smetoviImage3.png" target="_blank">
        <img src="/images/slike/_smetoviImage3.png" alt="img3" />
      </a>
      <a class="comicPanel" href="/images/slike/_smetoviImage4.png" target="_blank">
        <img src="/images/slike/_smetoviImage4.png" alt="img4" />
      </a>
      <a class="comicPanel" href="/images/slike/_smetoviImage5.png" target="_blank">
        <img src="/images/slike/_smetoviImage5.png" alt="img5" />
      </a>
      <a class="comicPanel" href="/images/slike/_smetoviImage6.png" target="_blank">
        <img src="/images/slike/_smetoviImage6.png" alt="img6" />
      </a>
    </main>
    <Footer />
  </body>
</html>
